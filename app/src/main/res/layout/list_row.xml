<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <TextView android:id="@+id/workout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="#0099cc"
        android:text="Fri MAR 14 10:22:03 EDT 2014"/>
         <ImageView android:id="@+id/workout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workout_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

         <TextView android:id="@+id/workout_type"
                   android:padding="5dp"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/workout_date"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Driving"/>

        <LinearLayout
                android:layout_toRightOf="@id/workout_type"
                android:layout_below="@+id/workout_date"

            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                     android:orientation="horizontal"
                     android:padding="4dp"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent">
                <TextView
                    android:id="@+id/workout_start_label"
                    android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:text="Start:"/>
            <TextView android:id="@+id/workout_start_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/workout_start_label"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:text="TimeThreshold"/>
            <TextView android:id="@+id/workout_end_reason_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:text="End:"/>
            <TextView android:id="@+id/workout_end_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:text="Detected Biking"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/workout_distance_time"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView android:id="@+id/workout_distance"
                          android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:textColor="#c3c3c3"
                    android:text="3.45 Miles"/>
                <TextView android:id="@+id/workout_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:text="00:23:01"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
